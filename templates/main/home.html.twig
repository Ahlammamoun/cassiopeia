{% extends 'base.html.twig' %}

{% block title %}
  <div class="col-lg-6 mx-auto text-center ">
         <p class="lead mb-4 text-muted fst-normal fw-bold">cassiopeia</p>
    </div>
{% endblock  %}

{% block body %}
<div class="my-2 py-2 text-center">
    <img src="{{ asset('assets/favicon.png') }}" height="100" alt="logo" class="logo">
    <h1 class="display-6 fw-bold">Enseignements, Exellence, quality </h1>
  
</div>

<div class="my-0 py-0 text-center">
    <div class="col-lg-5 mx-auto">
            <h2 class="display-7 fw-bold">Les cursus</h2>
            
        <div class="row row-cols-1 row-cols-md-2 g-2 ">
            {% for key, cursus in cursus %}
            <div class="d-inline p-2 ">
                <div class="card h-100 border-dark">

{% if app.session.get('theme') == 'firstTheme' %}
    <div class="card-body"  style="background-color: #0d6efd";>
     <h2><a class="link" href="{{ path('main_show', {'id' : key }) }}"  class="link-underline-light" >{{ cursus.title }}</a></h2> 
    <h3 class="card-number fst-normal" >{{ cursus.diplôme }}</h3>
    <h4 class="card-percent fst-normal" >{{ cursus.success }}</h4>
  <h5 class="card-percent fst-normal">difficulté => {{ cursus.difficulté }}</h5>


{% else %}
       <div class="card-body text-light"  style="background-color: #000000";>
   <h2><a class="link text-primary" href="{{ path('main_show', {'id' : key }) }}"  style="color= #0d6efd" class="link-underline-light" >{{ cursus.title }}</a></h2>   
    <h3 class="card-number fst-normal" style="color: #0d6efd";>{{ cursus.diplôme }}</h3>
    <h4 class="card-percent fst-normal" style="color: #0d6efd">{{ cursus.success }}</h4>
  <h5 class="card-percent fst-normal"style="color: #0d6efd">difficulté => {{ cursus.difficulté }}</h5>


{% endif %}  
                 
                                            
                    
                 </div>
                 </div>
             </div>
            {% endfor %}
            
            </div>
               
        </div>
    </div>
</div>
        
{% endblock  %}