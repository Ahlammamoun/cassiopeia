
{% extends 'back/back_base.html.twig' %}


{% block body %}
   <h2 class="text-center text-dark fst-normal">Student</h2>

    <table class="table  fst-normal">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Average</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for student in students %}
            <tr>
                <td>{{ student.id }}</td>
                <td>{{ student.firstname }}</td>
                <td>{{ student.lastname }}</td>
                <td>{{ student.average }}</td>
                <td>
                    <a href="{{ path('app_back_student_show', {'id': student.id}) }}">show</a>
                    <a href="{{ path('app_back_student_edit', {'id': student.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_back_student_new') }}">Create new</a>
{% endblock %}
