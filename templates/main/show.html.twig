{% extends 'base.html.twig' %}



{% block title %}

{% endblock %}

{% block body %}



<div class="my-2 py-2 text-center">    
    <img src="{{ asset('assets/favicon.png') }}" height="100" alt="logo" class="logo">
    <h1 class="display-6 fw-bold">Enseignements, Exellence, quality </h1>
  
</div>

<div class="my-0 py-0 text-center">
    <div class="col-lg-5 mx-auto">
            <h2 class="display-7 fw-bold">Les cursus</h2>
            
        <div class="row row-cols-1 row-cols-md-3 g-3">
          
            <div class="col">
                <div class="card h-100 border-dark">
                    
                 <div class="card-body">
                  <img class="col-4 movie__poster img-thumbnail" style="background-image: url({{ cursusById.picture }});" class="images">
                        <h2 class="card-title fst-normal">{{ cursusById.title }}</h2>
                        <p class="card-text fst-normal">{{ cursusById.accessibilité }}</p>
                        <h3 class="card-number fst-normal">{{ cursusById.diplôme }}</h3>
                        <h4 class="card-percent fst-normal">{{ cursusById.success }}</h4>
                        <h5 class="card-percent fst-normal">difficulté => {{ cursusById.difficulté }}</h5>
                 </div>
                 </div>
             </div>
          
            
            </div>
               
        </div>
    </div>
</div>









{% endblock %}